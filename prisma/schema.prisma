// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  // Force update
}

datasource db {
  provider = "postgresql"
}

model User {
  id              String    @id @default(cuid())
  clerkId         String    @unique
  email           String    @unique
  username        String?
  
  // XP & Progress
  totalXP         Int       @default(0)
  level           Int       @default(1)
  currentStreak   Int       @default(0)
  lastActiveDate  DateTime?
  
  // Stats
  questionsAnswered Int     @default(0)
  correctAnswers    Int     @default(0)
  
  sessions        Session[]
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  @@map("users")
}

model Session {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  subject         String
  mode            String   // 'practice', 'timed', 'mock'
  questionsCount  Int
  correctCount    Int
  incorrectCount  Int
  xpEarned        Int
  timeSpent       Int      // in seconds
  
  createdAt       DateTime @default(now())
  
  @@index([userId])
  @@map("sessions")
}

model Question {
  id               String    @id @default(cuid())
  subject          String
  questionText     String    @map("question_text")
  optionA          String    @map("option_a")
  optionB          String    @map("option_b")
  optionC          String    @map("option_c")
  optionD          String    @map("option_d")
  correctOption    String    @map("correct_option") // 'a', 'b', 'c', or 'd'
  year             Int?
  examType         String?   @map("exam_type") // 'utme', 'wassce', 'post-utme'
  explanation      String?   @map("explanation") @db.Text
  explanationImage String?   @map("explanation_image")
  keyConcepts      String[]  @default([]) @map("key_concepts")
  commonMistakes   String[]  @default([]) @map("common_mistakes")
  lastExplainedAt  DateTime? @map("last_explained_at")
  createdAt        DateTime  @default(now()) @map("created_at")
  
  @@index([subject])
  @@index([examType])
  @@index([year])
  @@map("questions")
}
